<div class="page-wrapper">
    <section class="header-14-sub">
        <div class="background">&nbsp;</div>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="header-14">
                        <img src="/pairs-logo.png">
                    </div>
                	<div class="row">
                        <div class="subscribe-form col-sm-8 col-sm-offset-2">
                            <form>
                                <div class="form-group has-feedback">
                                    {{input type="text" value=model.email  class="form-control input-hg" placeholder="Email Address"}}
                                    {{#if emailValidated}}
                                        <span class="form-control-feedback fui-check-circle" style="color: #de4e43;"></span>
                                    {{/if}}
                                </div>
                                <div class="form-group has-feedback">
                                    {{input type="text" value=model.firstName  class="form-control input-hg" placeholder="First Name"}}
                                    {{#if model.firstName}}
                                        <span class="form-control-feedback fui-check-circle" style="color: #de4e43;"></span>
                                    {{/if}}
                                </div>
                                <div class="form-group has-feedback">
                                    {{input type="text" value=model.lastName  class="form-control input-hg" placeholder="Last Name"}}
                                    {{#if model.lastName}}
                                        <span class="form-control-feedback fui-check-circle" style="color: #de4e43;"></span>
                                    {{/if}}
                                </div>
                                <div class="form-group has-feedback">
                                    {{input type="password" value=model.password  class="form-control input-hg" placeholder="Password"}}
                                    {{#if passwordValidated}}
                                        <span class="form-control-feedback fui-check-circle" style="color: #de4e43;"></span>
                                    {{/if}}
                                </div>
                                <div class="form-group has-feedback">
                                    {{input type="password" value=model.confirmation  class="form-control input-hg" placeholder="Confirm Password"}}
                                    {{#if passwordConfirmed}}
                                        <span class="form-control-feedback fui-check-circle" style="color: #de4e43;"></span>
                                    {{/if}}
                                </div>
                                <button {{action "register"}} class="btn btn-hg btn-primary btn-block" type="submit">Register and Sign In</button>
                            </form>
                        </div>
                    </div><br><br><br><br><br><br><br>               
                </div>
            </div>
        </div>
    </section>
</div>